<?xml version="1.0" encoding="UTF-8"?>

<vxml version="2.1" xmlns="http://www.w3.org/2001/vxml"

      xmlns:voxeo="http://community.voxeo.com/xmlns/vxml">

  <menu id="mainMenu">

    <prompt bargein="false">

      <break time="1s"/>

      Welcome to Flight booking and Inquiry service. choose one of the options below<enumerate/>

    </prompt>

    <choice next="Booking_Flight">
      <break time="1s"/>

      Book Flight

    </choice>

    <choice next="Enquire_Flight">
     <break time="1s"/>

       Flight Enquiry

    </choice>

  </menu>

  <nomatch>

    <property name="timeout" value="2s"/>

    Sorry I did not understand. Could you please repeat again.

    <reprompt/>

  </nomatch>

  <noinput>

    <property name="timeout" value="3s"/>

    You did not say anything.<enumerate/>

    <reprompt/>

  </noinput>

</vxml>


<?xml version="1.0" encoding="UTF-8" ?>

<grammar version="1.0" tag-format="semantics/1.0" root="control">

  <rule id="object">

    <one-of>

      <item> light </item>

      <item> heat </item>

      <item> A C <tag> out = 'air conditioning'; </tag></item>

      <item> air conditioning </item>

      <item> window </item>

      <item> door </item>

    </one-of>

  </rule>



  <rule id="action">

    <one-of>

      <item> turn off </item>

      <item> turn on </item>

    </one-of>

  </rule>



  <rule id="control">

    <one-of>

      <item><ruleref uri='#action'/><ruleref uri='#object'/><tag>out.action=rules.action; out.object=rules.object;</tag></item>

    </one-of>

  </rule>





</grammar>
